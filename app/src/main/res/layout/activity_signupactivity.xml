<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newbackground"
    tools:context=".signupactivity">

    <TextView
        android:id="@+id/signuptextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="monospace"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textColor="#F3F1F0"
        android:textSize="40dp"
        android:textStyle="bold"></TextView>

    <EditText
        android:id="@+id/firstnameEdittextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signuptextview"
        android:layout_margin="30dp"
        android:hint="First Name"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold"></EditText>

    <EditText
        android:id="@+id/lastnameEdittextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstnameEdittextview"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Last Name"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold"></EditText>

    <EditText
        android:id="@+id/newUsernameEdittextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastnameEdittextview"
        android:layout_margin="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Create Username"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold"></EditText>


    <SeekBar
        android:id="@+id/ageSeekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newUsernameEdittextview"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:progress="18"></SeekBar>

    <TextView
        android:id="@+id/ageOfnewUserTextview"
        android:layout_width="match_parent"
        android:layout_below="@+id/ageSeekbar"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="bold"
        android:text="18"></TextView>

    <EditText
        android:id="@+id/newPasswordEdittextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ageOfnewUserTextview"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Create Password"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:inputType="textPassword" ></EditText>

    <Button
        android:id="@+id/newUserSignupButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newPasswordEdittextview"
        android:background="@android:color/holo_orange_dark"
        android:text="SIGN UP"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"></Button>


</RelativeLayout>